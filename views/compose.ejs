    <div class="form-group">
        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input type="text" name="title" class="form-control" placeholder="Title">
        </div>
        <div class="form-floating">
            <label for="Title" class="form-label">Content</label>
